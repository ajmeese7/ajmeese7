<svg width="640" height="160" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
  <foreignObject width="640" height="160">
    <div xmlns="http://www.w3.org/1999/xhtml" class="wrap">
      <style>
        .wrap {
          width: 640px;
          height: 160px;
        }

        .card {
          align-items: center;
          background-color: #{{background_color}};
          border: 1px solid #{{border_color}};
          border-radius: 12px;
          box-sizing: border-box;
          display: flex;
          gap: 16px;
          height: 160px;
          padding: 18px 20px;
        }

        .cover {
          border-radius: 8px;
          height: 96px;
          object-fit: cover;
          width: 96px;
        }

        .meta {
          display: flex;
          flex-direction: column;
          gap: 6px;
          min-width: 0;
        }

        .status {
          color: #9aa0a6;
          font: 600 12px/1 "IBM Plex Mono", "Space Grotesk", "Segoe UI", monospace;
          letter-spacing: 1px;
          text-transform: uppercase;
        }

        .song {
          color: #f5f5f5;
          font: 600 22px/1.2 "Space Grotesk", "IBM Plex Sans", "Segoe UI", sans-serif;
          overflow: hidden;
          text-overflow: ellipsis;
          white-space: nowrap;
        }

        .artist {
          color: #c9c9c9;
          font: 400 16px/1.2 "IBM Plex Sans", "Space Grotesk", "Segoe UI", sans-serif;
          overflow: hidden;
          text-overflow: ellipsis;
          white-space: nowrap;
        }

        #bars {
          height: 28px;
          margin-top: 8px;
          position: relative;
          width: 200px;
        }

        .bar {
          bottom: 0;
          height: 12px;
          position: absolute;
          width: 3px;
          background: linear-gradient(to top, #2a2a2a, #f5f5f5);
          opacity: 0.8;
          animation: sound 0ms -800ms ease-in infinite alternate;
        }

        a {
          color: inherit;
          text-decoration: none;
        }

        @keyframes sound {
          0% {
            height: 4px;
            opacity: 0.35;
          }
          100% {
            height: 18px;
            opacity: 0.9;
          }
        }

        {{barCSS|safe}}
      </style>

      <div class="card">
        <img src="data:image/png;base64, {{image}}" class="cover" alt="Album art" />
        <div class="meta">
          <div class="status">{{status}}</div>
          <a href="{{songURI}}" target="_blank">
            <div class="song">{{songName}}</div>
          </a>
          <a href="{{artistURI}}" target="_blank">
            <div class="artist">{{artistName}}</div>
          </a>
          <div id="bars">{{contentBar|safe}}</div>
        </div>
      </div>
    </div>
  </foreignObject>
</svg>
